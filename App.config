<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<configSections>
		<!-- Configuración de Entity Framework -->
		<section name="entityFramework"
				 type="System.Data.Entity.Internal.ConfigFile.EntityFrameworkSection, EntityFramework, Version=6.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089"
				 requirePermission="false" />
	</configSections>

	<connectionStrings>
		<!-- Conexión directa a la base de datos (opcional para pruebas directas) -->
		<add name="AppConnectionString"
			 connectionString="Data Source=localhost;
                           Initial Catalog=ProyectoVisual;
                           User ID=sa;
                           Password=NuevaContraseñaFuerte123!;
                           MultipleActiveResultSets=True;
                           Encrypt=False;
                           TrustServerCertificate=True"
			 providerName="System.Data.SqlClient" />

		<!-- Conexión principal usada por Entity Framework -->
		<add name="ProyectoVisualEntities"
			 connectionString="metadata=res://*/ProyectoVisualModel.csdl|
                           res://*/ProyectoVisualModel.ssdl|
                           res://*/ProyectoVisualModel.msl;
                           provider=System.Data.SqlClient;
                           provider connection string=&quot;
                           data source=localhost;
                           initial catalog=ProyectoVisual;
                           user id=sa;
                           password=NuevaContraseñaFuerte123!;
                           MultipleActiveResultSets=True;
                           Encrypt=False;
                           TrustServerCertificate=True;
                           App=EntityFramework&quot;"
			 providerName="System.Data.EntityClient" />
	</connectionStrings>

	<entityFramework>
		<defaultConnectionFactory
			type="System.Data.Entity.Infrastructure.SqlConnectionFactory, EntityFramework" />
		<providers>
			<provider invariantName="System.Data.SqlClient"
					  type="System.Data.Entity.SqlServer.SqlProviderServices, EntityFramework.SqlServer" />
		</providers>
	</entityFramework>

	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
	</startup>
</configuration>
